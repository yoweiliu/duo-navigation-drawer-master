<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_radius2">

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_oval"
        android:onClick="button1OnClicked"
        android:text="@string/music"
        android:textSize="25dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_weight="0.04"
        android:background="@drawable/shape_oval"
        android:onClick="button2OnClicked"
        android:text="Film"
        android:textSize="25dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.04"
        android:background="@drawable/shape_oval"
        android:onClick="button3OnClicked"
        android:text="Youtube"
        android:textSize="25dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_weight="0.04"
        android:background="@drawable/shape_oval"
        android:onClick="button4OnClicked"
        android:text="CTITV"
        android:textSize="25dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_weight="0.04"
        android:background="@drawable/shape_oval"
        android:onClick="button5OnClicked"
        android:text="DongSen"
        android:textSize="25dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="0.04"
        android:background="@drawable/shape_oval"
        android:onClick="button6OnClicked"
        android:text="TTV"
        android:textSize="25dp" />

</RelativeLayout>





